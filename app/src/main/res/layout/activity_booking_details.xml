<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_booking_job_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_smoke"
    tools:context="com.delex.bookingFlow.BookingDetailsActivity">

    <include
        android:id="@+id/action_bar"
        layout="@layout/layout_toolbar_two_center_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/tv_booking_details_expired"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14sp"
        android:text="@string/booking_expired"
        android:padding="@dimen/dimen_10dp"
        android:gravity="center"
        android:visibility="gone"
        android:layout_below="@+id/action_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_booking_details_expired">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:background="@color/order_divider"
                android:layout_marginTop="@dimen/dimen_10dp"/>

            <LinearLayout
                android:id="@+id/ll_booking_details_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view1"
                android:layout_marginStart="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginEnd="1dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_booking_details_location_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pick_and_drop"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:layout_marginEnd="@dimen/dimen_10dp"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginStart="@dimen/dimen_10dp"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:layout_marginBottom="@dimen/dimen_8dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_18sp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"                    android:paddingStart="@dimen/dimen_15dp"
                    android:paddingEnd="@dimen/dimen_15dp"
                    android:minHeight="@dimen/dimen_60dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dimen_5dp">

                    <LinearLayout
                        android:id="@+id/llPickImages"
                        android:layout_width="@dimen/dimen_15dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginEnd="@dimen/dimen_10dp"
                        android:layout_marginRight="@dimen/dimen_10dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:background="@color/white_smoke">

                        <ImageView
                            android:id="@+id/ivGreenIcon"
                            android:layout_width="@dimen/dimen_18dp"
                            android:layout_height="@dimen/dimen_18dp"
                            android:src="@drawable/shape_box_square_green"
                            android:rotation="45"
                            android:padding="@dimen/dimen_5dp"
                            android:layout_gravity="start"
                            android:contentDescription="@string/app_name" />

                        <RelativeLayout
                            android:id="@+id/rlGrayVerticalLine"
                            android:layout_width="18dp"
                            android:layout_height="match_parent"
                            android:background="@color/white_smoke"
                            android:layout_marginEnd="@dimen/dimen_10dp"
                            android:layout_marginRight="@dimen/dimen_10dp">

                            <View
                                android:id="@+id/vVerticalGrayLine"
                                android:layout_width="1.5dp"
                                android:layout_height="60dp"                                android:layout_centerInParent="true"
                                android:background="@color/darkGray"
                                android:layout_marginTop="@dimen/dimen_5dp"
                                android:layout_marginBottom="@dimen/dimen_5dp"/>
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toEndOf="@id/llPickImages"
                        android:layout_toRightOf="@id/llPickImages"
                        android:orientation="vertical"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true">

                        <TextView
                            android:id="@+id/tv_booking_details_location_pick"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_14sp"
                            android:text="@string/pickUP"
                            android:gravity="start|top"
                            android:layout_gravity="start|top"
                            android:textColor="@color/grayLightTextColor"
                            android:maxLines="1"/>

                        <TextView
                            android:id="@+id/tv_booking_details_pick_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_12sp"
                            android:gravity="start"
                            android:layout_gravity="start"
                            android:textColor="@color/grayTextColor"
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:maxLines="5"
                            android:layout_marginBottom="@dimen/dimen_10dp" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/dimen_15dp"
                    android:paddingEnd="@dimen/dimen_15dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/dimen_10dp">

                    <ImageView
                        android:id="@+id/ivRedIcon"
                        android:layout_width="@dimen/dimen_18dp"
                        android:layout_height="@dimen/dimen_18dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginRight="@dimen/dimen_10dp"
                        android:layout_marginEnd="@dimen/dimen_10dp"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/shape_box_square_red"
                        android:rotation="45"
                        android:padding="@dimen/dimen_5dp"
                        android:contentDescription="@string/app_name" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toEndOf="@id/ivRedIcon"
                        android:layout_toRightOf="@id/ivRedIcon"
                        android:orientation="vertical"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true">

                        <TextView
                            android:id="@+id/tv_booking_details_drop_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_14sp"
                            android:text="@string/Drop"
                            android:gravity="start|top"
                            android:layout_gravity="start|top"
                            android:textColor="@color/grayLightTextColor"
                            android:maxLines="1"/>

                        <TextView
                            android:id="@+id/tv_booking_details_drop_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="3"
                            android:gravity="start"
                            android:layout_gravity="start"
                            android:textSize="12sp"
                            android:textColor="@color/grayTextColor"
                            android:layout_marginTop="5dp" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:background="@color/order_divider"
                android:layout_below="@id/ll_booking_details_location"/>

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:background="@color/order_divider"
                android:layout_below="@id/view2"
                android:layout_marginTop="@dimen/dimen_10dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rl_booking_details_rcvr_details"
                android:layout_below="@id/view3"
                android:layout_marginStart="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginEnd="1dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_booking_details_rcvr_details_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/receiver_info"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:layout_marginEnd="@dimen/dimen_10dp"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginStart="@dimen/dimen_10dp"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:layout_marginBottom="@dimen/dimen_8dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_18sp"/>

                <LinearLayout
                    android:id="@+id/ll_booking_details_rcvr_details_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_booking_details_rcvr_details_title"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="@dimen/dimen_5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/dimen_4dp">

                        <ImageView
                            android:id="@+id/iv_booking_details_rcvr_details_name_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/job_details_user_icon"
                            android:layout_marginLeft="@dimen/dimen_3dp"
                            android:layout_marginStart="@dimen/dimen_3dp"
                            android:layout_marginRight="@dimen/dimen_5dp"
                            android:layout_marginEnd="@dimen/dimen_5dp"
                            android:contentDescription="@string/app_name" />
                        <TextView
                            android:id="@+id/tv_booking_details_rcvr_details_name_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textSize="@dimen/text_size_12sp"
                            android:textColor="@color/shiping_heading_color2"
                            android:text="@string/receiver_name"
                            android:textAllCaps="true"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_booking_details_rcvr_details_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:textSize="@dimen/text_size_15sp"
                        android:textColor="@color/shiping_text_color"
                        android:hint="@string/full_name"
                        android:paddingBottom="3dp"
                        android:layout_marginLeft="@dimen/dimen_32dp"
                        android:layout_marginStart="@dimen/dimen_32dp"
                        android:layout_marginRight="@dimen/dimen_10dp"
                        android:layout_marginEnd="@dimen/dimen_10dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="05dp"
                    android:layout_below="@+id/ll_booking_details_rcvr_details_name"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/dimen_4dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/job_details_call_icon"
                            android:layout_marginLeft="@dimen/dimen_3dp"
                            android:layout_marginStart="@dimen/dimen_3dp"
                            android:layout_marginRight="@dimen/dimen_5dp"
                            android:layout_marginEnd="@dimen/dimen_5dp"
                            android:contentDescription="@string/app_name" />

                        <TextView
                            android:id="@+id/tv_booking_details_rcvr_details_phone_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_12sp"
                            android:textColor="@color/shiping_heading_color2"
                            android:layout_gravity="center_vertical"
                            android:text="@string/phone"
                            android:textAllCaps="true"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_booking_details_rcvr_details_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_15sp"
                        android:textColor="@color/color1081c2"
                        android:maxLines="2"
                        android:paddingBottom="3dp"
                        android:layout_marginBottom="@dimen/dimen_5dp"
                        android:layout_marginLeft="@dimen/dimen_32dp"
                        android:layout_marginStart="@dimen/dimen_32dp"
                        android:layout_marginRight="@dimen/dimen_10dp"
                        android:layout_marginEnd="@dimen/dimen_10dp"/>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:background="@color/order_divider"
                android:layout_below="@id/rl_booking_details_rcvr_details"/>

            <!--Item details-->
            <View
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:background="@color/order_divider"
                android:layout_below="@id/view4"
                android:layout_marginTop="@dimen/dimen_10dp"/>
            <View
                android:id="@+id/view14"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_below="@id/view5"
                android:background="@color/light_shadow" />

            <LinearLayout
                android:id="@+id/ll_shipment_dimen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/view14"
                android:padding="@dimen/dimen_15dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_shipment_dimen_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dimensions"
                    android:textSize="@dimen/text_size_16sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="@dimen/dimen_5dp" />


                <LinearLayout
                    android:weightSum="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/et_dimen_length"
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/et_dimen_length_title"
                            android:text="Length"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:inputType="numberDecimal"
                            android:id="@+id/et_dimen_width"
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/et_dimen_width_title"
                            android:text="Width"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:inputType="numberDecimal"
                            android:id="@+id/et_dimen_hieght"
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/et_dimen_hieght_title"
                            android:text="Hieght"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <View
                android:id="@+id/view16"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_below="@id/ll_shipment_dimen"
                android:background="@color/light_shadow" />

            <View
                android:id="@+id/view18"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_10dp"
                android:layout_below="@id/view16"
                android:background="@color/colorfafafa" />

            <RelativeLayout
                android:id="@+id/tv_booking_details_good_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view18"
                android:layout_marginStart="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginEnd="1dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_item_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/what_are_you_sending"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:layout_marginEnd="@dimen/dimen_10dp"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginStart="@dimen/dimen_10dp"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:layout_marginBottom="@dimen/dimen_8dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_18sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ll_item_name"
                    android:layout_below="@id/tv_item_detail"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="@dimen/dimen_5dp"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/dimen_4dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/job_details_package_icon"
                            android:layout_marginLeft="@dimen/dimen_3dp"
                            android:layout_marginStart="@dimen/dimen_3dp"
                            android:layout_marginRight="@dimen/dimen_5dp"
                            android:layout_marginEnd="@dimen/dimen_5dp"
                            android:contentDescription="@string/app_name" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_booking_details_good_type_title"
                            android:layout_gravity="center_vertical"
                            android:textSize="@dimen/text_size_12sp"
                            android:textColor="@color/shiping_heading_color2"
                            android:text="@string/goods_type"
                            android:textAllCaps="true"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_booking_details_good_type_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:textSize="@dimen/text_size_15sp"
                        android:textColor="@color/shiping_text_color"
                        android:paddingBottom="3dp"
                        android:layout_marginLeft="@dimen/dimen_32dp"
                        android:layout_marginStart="@dimen/dimen_32dp"
                        android:layout_marginRight="@dimen/dimen_10dp"
                        android:layout_marginEnd="@dimen/dimen_10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ll_item_phone"
                    android:orientation="vertical"
                    android:layout_marginTop="05dp"
                    android:layout_below="@+id/ll_item_name"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/dimen_4dp">

                        <ImageView
                            android:id="@+id/iv_rec_qty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/job_details_quantity_icon"
                            android:layout_marginLeft="@dimen/dimen_3dp"
                            android:layout_marginStart="@dimen/dimen_3dp"
                            android:layout_marginRight="@dimen/dimen_5dp"
                            android:layout_marginEnd="@dimen/dimen_5dp"
                            android:contentDescription="@string/app_name" />

                        <TextView
                            android:id="@+id/tv_booking_details_qty_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_12sp"
                            android:textColor="@color/shiping_heading_color2"
                            android:layout_gravity="center_vertical"
                            android:text="@string/quantity"
                            android:textAllCaps="true"/>

                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_booking_details_qty_name"
                        android:textColorHint="@color/lightgrey"
                        android:maxLines="2"
                        android:textSize="@dimen/text_size_15sp"
                        android:textColor="@color/shiping_text_color"
                        android:paddingBottom="3dp"
                        android:layout_marginBottom="@dimen/dimen_5dp"
                        android:layout_marginLeft="@dimen/dimen_32dp"
                        android:layout_marginStart="@dimen/dimen_32dp"
                        android:layout_marginRight="@dimen/dimen_10dp"
                        android:layout_marginEnd="@dimen/dimen_10dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llHelpersNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="05dp"
                    android:layout_below="@id/ll_item_phone"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/dimen_4dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/job_details_user_icon"
                            android:layout_marginLeft="@dimen/dimen_3dp"
                            android:layout_marginStart="@dimen/dimen_3dp"
                            android:layout_marginRight="@dimen/dimen_5dp"
                            android:layout_marginEnd="@dimen/dimen_5dp"
                            android:contentDescription="@string/app_name" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_12sp"
                            android:textColor="@color/shiping_heading_color2"
                            android:layout_gravity="center_vertical"
                            android:text="@string/helpers_Caps"
                            android:textAllCaps="true"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_booking_details_helpers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/lightgrey"
                        android:hint="@string/hint"
                        android:maxLines="1"
                        android:textSize="@dimen/text_size_15sp"
                        android:textColor="@color/shiping_text_color"
                        android:paddingBottom="3dp"
                        android:layout_marginBottom="@dimen/dimen_5dp"
                        android:layout_marginLeft="@dimen/dimen_32dp"
                        android:layout_marginStart="@dimen/dimen_32dp"
                        android:layout_marginRight="@dimen/dimen_10dp"
                        android:layout_marginEnd="@dimen/dimen_10dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_booking_details_pics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/llHelpersNo"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="@dimen/dimen_5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/dimen_4dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/job_details_gallery_icon"
                            android:layout_marginLeft="@dimen/dimen_3dp"
                            android:layout_marginStart="@dimen/dimen_3dp"
                            android:layout_marginRight="@dimen/dimen_5dp"
                            android:layout_marginEnd="@dimen/dimen_5dp"
                            android:contentDescription="@string/app_name" />
                        <TextView
                            android:id="@+id/tv_booking_details_pics_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_12sp"
                            android:textColor="@color/shiping_heading_color2"
                            android:layout_gravity="center_vertical"
                            android:text="@string/photo"
                            android:textAllCaps="true"/>
                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_booking_details_pics"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_32dp"
                        android:layout_marginStart="@dimen/dimen_32dp"
                        android:layout_marginRight="@dimen/dimen_10dp"
                        android:layout_marginEnd="@dimen/dimen_10dp"
                        android:layout_marginTop="@dimen/dimen_3dp"
                        android:layout_marginBottom="@dimen/dimen_2dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_booking_details_notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:layout_below="@+id/ll_booking_details_pics"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/dimen_4dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/job_details_note_icon"
                            android:layout_marginLeft="@dimen/dimen_3dp"
                            android:layout_marginStart="@dimen/dimen_3dp"
                            android:layout_marginRight="@dimen/dimen_5dp"
                            android:layout_marginEnd="@dimen/dimen_5dp"
                            android:contentDescription="@string/app_name" />

                        <TextView
                            android:id="@+id/tv_booking_details_notes_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_12sp"
                            android:textColor="@color/shiping_heading_color2"
                            android:text="@string/AdditionalNotes"
                            android:textAllCaps="true"
                            android:layout_gravity="center_vertical"/>

                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_booking_details_notes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/lightgrey"
                        android:hint="@string/No_Additional_notes"
                        android:textSize="@dimen/text_size_15sp"
                        android:textColor="@color/shiping_text_color"
                        android:paddingBottom="3dp"
                        android:layout_marginBottom="@dimen/dimen_10dp"
                        android:layout_marginLeft="@dimen/dimen_32dp"
                        android:layout_marginStart="@dimen/dimen_32dp"/>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:id="@+id/view6"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:background="@color/order_divider"
                android:layout_below="@id/tv_booking_details_good_type"/>

            <View
                android:id="@+id/view7"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:background="@color/order_divider"
                android:layout_below="@id/view6"
                android:layout_marginTop="@dimen/dimen_10dp"/>

            <!-- PAYMENT -->
            <LinearLayout
                android:id="@+id/tv_booking_details_payment_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view7"
                android:background="@color/white"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:padding="@dimen/dimen_15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvPaymentLabel_cancelledBooking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_16sp"
                    android:textColor="@color/colorPrimary"
                    android:paddingBottom="@dimen/dimen_10dp"
                    android:text="@string/paymentMethod"/>

                <TextView
                    android:id="@+id/tvCardNo_cancelledBooking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/text_size_14sp"
                    android:drawableStart="@drawable/group2"
                    android:drawableLeft="@drawable/group2"
                    android:text="@string/cardNoHidden"
                    android:gravity="center"
                    android:textColor="@color/grayTextColor" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
