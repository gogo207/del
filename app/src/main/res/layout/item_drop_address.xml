<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_drop_address_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_grey_selector"
    android:gravity="center_vertical">
    <ImageView
        android:id="@+id/iv_drop_clock_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="@dimen/dimen_10dp"
        android:src="@drawable/home_timing_icon"
        android:contentDescription="@string/app_name"
        android:layout_centerVertical="true"/>
    <ImageView
        android:id="@+id/iv_drop_fav_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/dimen_10dp"
        android:src="@drawable/home_heart_icon_off"
        android:contentDescription="@string/app_name"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/tv_drop_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/set_picup_location"
        android:textSize="14sp"
        android:layout_toRightOf="@id/iv_drop_clock_icon"
        android:layout_toEndOf="@id/iv_drop_clock_icon"
        android:layout_toStartOf="@id/iv_drop_fav_icon"
        android:layout_toLeftOf="@id/iv_drop_fav_icon"
        android:paddingTop="@dimen/dimen_10dp"
        android:paddingBottom="@dimen/dimen_10dp"
        android:gravity="start|center_vertical"
        android:layout_centerInParent="true"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/shiping_background_color"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>