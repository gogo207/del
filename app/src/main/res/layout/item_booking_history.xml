<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    card_view:cardCornerRadius="@dimen/dimen_3dp"
    card_view:contentPadding="@dimen/dimen_5dp"
    card_view:cardBackgroundColor="@color/white"
    android:layout_margin="@dimen/dimen_5dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rl_history_layout"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rl_history_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_history_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_16sp"
                    android:maxLines="1"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:textColor="@color/order_name"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/tv_history_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_12sp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_8dp"
                    android:layout_marginEnd="@dimen/dimen_8dp"
                    android:textColor="@color/shiping_heading_color"/>
            </RelativeLayout>
            <View
                android:id="@+id/vw_history_divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_below="@+id/rl_history_name_layout"
                android:layout_marginRight="@dimen/dimen_8dp"
                android:layout_marginEnd="@dimen/dimen_8dp"
                android:background="@color/order_divider"/>
            <LinearLayout
                android:id="@+id/ll_history_pickup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/vw_history_divider"
                android:layout_marginTop="@dimen/dimen_3dp"
                android:layout_marginBottom="@dimen/dimen_4dp">

                <ImageView
                    android:id="@+id/ivGreenIcon"
                    android:layout_width="@dimen/dimen_18dp"
                    android:layout_height="@dimen/dimen_18dp"
                    android:src="@drawable/shape_box_square_green"
                    android:rotation="45"
                    android:padding="@dimen/dimen_5dp"
                    android:layout_gravity="start"
                    android:contentDescription="@string/app_name" />
                <TextView
                    android:id="@+id/tv_history_pick_addrs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_14sp"
                    android:maxLines="1"
                    android:textColor="@color/shiping_text_color"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_history_pickup"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dimen_3dp"
                android:layout_marginBottom="@dimen/dimen_4dp">
                <ImageView
                    android:id="@+id/ivRedIcon"
                    android:layout_width="@dimen/dimen_18dp"
                    android:layout_height="@dimen/dimen_18dp"
                    android:src="@drawable/shape_box_square_red"
                    android:rotation="45"
                    android:padding="@dimen/dimen_5dp"
                    android:layout_gravity="start"
                    android:contentDescription="@string/app_name" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_14sp"
                    android:id="@+id/tv_history_drop_addrs"
                    android:maxLines="1"
                    android:textColor="@color/shiping_text_color"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:layout_marginEnd="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:layout_marginBottom="@dimen/dimen_4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_12sp"
                android:id="@+id/tv_history_bid"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:textColor="@color/shiping_heading_color"/>
            <TextView
                android:id="@+id/tv_history_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_12sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:textColor="@color/order_status"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>







