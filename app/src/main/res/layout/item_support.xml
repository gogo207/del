<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:id="@+id/cv_add_drop_recent"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginTop="@dimen/dimen_8dp"
	android:layout_marginLeft="@dimen/dimen_10dp"
	android:layout_marginStart="@dimen/dimen_10dp"
	android:layout_marginRight="@dimen/dimen_10dp"
	android:layout_marginEnd="@dimen/dimen_10dp"
	android:layout_marginBottom="@dimen/dimen_8dp"
	android:background="@color/white"
	card_view:cardCornerRadius="@dimen/dimen_10dp"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:card_view="http://schemas.android.com/apk/res-auto">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<RelativeLayout
			android:id="@+id/rlSupportMainCat"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="@dimen/dimen_10dp"
			android:layout_gravity="center_vertical">

			<TextView
				android:id="@+id/tvSupportMainCatName"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textColor="@color/grayTextColor"
				android:textSize="@dimen/text_size_14sp"
				android:layout_centerVertical="true"
				android:layout_alignParentLeft="true"
				android:layout_alignParentStart="true"/>

			<ImageView
				android:id="@+id/ivSupportMainCat"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/ic_chevron_right_gray_24dp"
				android:layout_alignParentRight="true"
				android:layout_alignParentEnd="true"
				android:layout_centerVertical="true"
				android:contentDescription="@string/app_name" />
		</RelativeLayout>

		<LinearLayout
			android:id="@+id/llSupportSubCat"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_below="@id/rlSupportMainCat"
			android:visibility="gone">

			<View
				android:layout_width="match_parent"
				android:layout_height="@dimen/dimen_1dp"
				android:background="@color/gray" />
		</LinearLayout>

		<!--<View
			android:id="@+id/viewMainCatBottomLine"
			android:layout_width="match_parent"
			android:layout_height="@dimen/dimen_1dp"
			android:background="@color/gray"
			android:layout_below="@id/llSupportSubCat"/>-->
	</RelativeLayout>
</android.support.v7.widget.CardView>