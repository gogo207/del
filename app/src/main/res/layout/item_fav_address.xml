<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_fav_address_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_grey_selector"
    android:gravity="center_vertical">
    <ImageView
        android:id="@+id/iv_fav_address_heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="@dimen/dimen_10dp"
        android:src="@drawable/home_heart_icon_on"
        android:contentDescription="@string/app_name"
        android:layout_centerVertical="true"/>
    <ImageView
        android:id="@+id/iv_fav_address_delete_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/dimen_10dp"
        android:src="@drawable/fev_address_delete_icon_off"
        android:contentDescription="@string/app_name"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_fav_address_heart"
        android:layout_toEndOf="@id/iv_fav_address_heart"
        android:layout_toStartOf="@id/iv_fav_address_delete_icon"
        android:layout_toLeftOf="@id/iv_fav_address_delete_icon"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_fav_address_title"
            android:textColor="@color/home_grey_btn"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="start|center_vertical" />
        <TextView
            android:id="@+id/tv_fav_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/set_picup_location"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit ="marquee_forever"
            android:scrollHorizontally="true"
            android:gravity="start|center_vertical" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/shiping_background_color"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>